mixin header(name, x)
  .item.section(id=x)
    h2= name
    .row
       ul&attributes(attributes)
         block
mixin img_post(p)
 li(style="background: url(#{p.url}#{p.metadata.header})")
  a.center(href="#{p.url}") &nbsp;
mixin video_post(p)
 li video #{p.metadata.video}
mixin plain_post(p)
 li plain post #{p}
mixin post(p)
  if p.metadata.header
   +img_post(p)
  else if p.metadata.video
   +video_post(p)
  else
   +plain_post(p)
