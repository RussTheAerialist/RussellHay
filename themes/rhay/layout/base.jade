block vars
    - var bodyclass = null;
doctype html
html(lang='en')
    head
        block head
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
            meta(name='viewport', content='width=device-width')
        != css(["css/font.css", "css/main.css"])
    body(class=bodyclass)
        #container
            .header
                h1
                  a(href=config.root) Russell Hay
                  span
                    span.code.accent
                        a(href=url_for("tags/code")) code
                    |,
                    span.art.accent
                        a(href=url_for("tags/art")) art
                    |,
                    span.make.accent
                        a(href=url_for("tags/make")) make
                    |,
                    span.move.accent
                        a(href=url_for("tags/move")) move
            .body
                if (page.tag)
                    h1 all posts tagged with #{page.tag}
                block body
            .footer
                | Something here
