block vars
    - var bodyclass = null;
doctype html
html(lang='en')
    head
        block head
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
            meta(name='viewport', content='width=device-width')
        != css(["css/font.css", "css/main.css"])
    body(class=bodyclass)
        #container
            .header
                h1
                  a(href=config.root) Russell Hay
                  span
                    span.code.accent
                        a(href=url_for("tags/code")) code
                    |,
                    span.art.accent
                        a(href=url_for("tags/art")) art
                    |,
                    span.make.accent
                        a(href=url_for("tags/make")) make
                    |,
                    span.move.accent
                        a(href=url_for("tags/move")) move
            .body
                if (page.tag)
                    h1 all posts tagged with #{page.tag}
                block body
            .footer
              .footer_container
                 .footer_item
                    a(href=url_for("about")) about me
                    br
                    a(rel="feed", href=url_for("feed.rss")) feed
                    br(style="margin-bottom: 1em;")
                    a(href="http://hexo.io") Powered by Hexo
                    br
                    a(rel="license", href="http://creativecommons.org/licenses/by-nc-nd/4.0/")
                      img(alt="Creative Commons License", src="https://i.creativecommons.org/l/by-nc-nd/4.0/80x15.png")

                 .footer_item
                    | twitter:
                    a(href="http://twitter.com/RussellHay") @RussellHay
                    br
                    | github:
                    a(href="http://github.com/RussTheAerialist") RussTheAerialist
                    br
                    | bitbucket:
                    a(href="http://bitbucket.org/russellhay") russellhay
